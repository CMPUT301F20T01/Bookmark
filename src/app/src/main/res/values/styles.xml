<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="navigationActivity" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="OutlinedSpacedTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <style name="OutlinedSpacedTextInputLayout.Top">
        <item name="android:layout_marginTop">0dp</item>
    </style>

    <style name="OutlinedSpacedTextInputLayout.Bottom">
        <item name="android:layout_marginBottom">0dp</item>
    </style>

    <style name="BottomButton" parent="Widget.MaterialComponents.Button">
        <!-- Margin assumes it the button is being used with a 16dp-padded container -->
        <item name="android:layout_marginBottom">16dp</item>
    </style>

    <style name="BottomButton.Outlined" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <!-- Margin assumes it the button is being used with a 16dp-padded container -->
        <!-- Have to redefine this here because of parent overriding dot-notation -->
        <item name="android:layout_marginBottom">16dp</item>
    </style>

</resources>